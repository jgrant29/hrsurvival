<p id="notice"><%= notice %></p>
<h1><%= @book.title %></h1>

<% if policy(@book).update? %>
  <%= link_to "Edit Topic", edit_book_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @book.body %></p>
    <% @chapters.each do |chapter| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to chapter.title, [@book, chapter] %>
          </h4>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if policy(Book.new).create? %>
      <%= link_to "New Chapter", new_book_chapter_path(@book), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
