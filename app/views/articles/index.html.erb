<% @articles.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |articles| %>
    <div class="col-md-4">
      <h3><%= link_to articles.title, articles %></h3>
      <i>Published <%= articles.created_at.strftime("%B %dth %Y") %></i>
      <p><%= simple_format articles.body[0...300] %></p>
      <div><%= link_to "Read more", articles%></div>
        <% if policy(@articles).update? %>
          <div><%= link_to 'Edit', edit_article_path(articles) %></div>
          <div><%= link_to 'Destroy', articles, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
    </div>
    <% end %>
  </div>

