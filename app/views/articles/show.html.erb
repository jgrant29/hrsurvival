<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-3-article col-md-3-mobile">
      <div>
        <br><h2>More Articles</h2><hr>
      </div>
        <% @articles.each do |a| %>
          <h4><%= link_to a.title, a %></h4>
        <% end %>
 
        <%= render partial: 'google/horizontal' %>
      </div>
    <br><div class="col-md-9">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
