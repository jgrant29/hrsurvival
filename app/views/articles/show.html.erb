      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
      <div class="toc-body">
        <h1><%= @article.title %></h1><hr>
        <% if policy(@articles).update? %>
          <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %>
        <% end %>
        <strong><small>Share this article on 
          <%= link_to 'https://www.facebook.com/sharer/sharer.php?u='+request.host+request.fullpath, target: :blankdo %>
            <%= fa_icon "facebook 2x"%>
          <% end %>
          <%= link_to 'https://twitter.com/intent/tweet?url=https://'+request.host+request.fullpath+'&text='+@article.title do %>
            <%= fa_icon "twitter 2x"%>
          <% end %>
        </small></strong>

        <div><%= simple_format @article.body %></div>
      </div><br>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
