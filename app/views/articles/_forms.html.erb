<% @articles.where(forms_policies: true).in_groups_of(3, false).each do |form| %>
  <div class="row">
  <% form.each do |policy| %>
      <div class="col-md-4">
        <h3><%= link_to policy.title, policy %></h3>
        <i>Published <%= policy.created_at.strftime("%B %dth %Y") %></i>
        <p><%= simple_format policy.body[0...300] %></p>
        <div>
          <%= link_to "Read more", policy%>
        </div>
        <% if policy(@articles).update? %>
          <div>
            <%= link_to 'Edit', edit_article_path(policy) %>
          </div>
          <div>
            <%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div> <!-- end of destory button -->
        <% end %> <!-- end of policy -->
      </div> <!-- col-md-4 -->
    <% end %>  
  </div>
<% end %>


