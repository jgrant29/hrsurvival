  <div class="alert alert-success">
     <br><br><button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% elsif flash[:error] %>
  <div class="alert alert-danger">
     <br><br><button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:error] %>
  </div>
  <% elsif flash[:alert] %>
  <div class="alert alert-warning">
     <br><br><button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
