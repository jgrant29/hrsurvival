
<div class="row">
  <div class="col-md-3 border-col">
    <h3><%= @book.title %></h3>
    <% @book.chapters.each do |chapter| %>
      <h5><%= link_to chapter.title, [@book, chapter] %></h5>
    <% end %>
    
      </div>

  <div class="col-md-9 chapter-col">
    <div class="media">
      <div class="media-body">          
        <h1><%= @chapter.title %></h1>
          <% if policy(@chapter).update? %>
            <%= link_to "Edit Chapter", edit_book_chapter_path, class: 'btn btn-primary' %>
            <%= link_to "New TOC", new_book_chapter_tableofcontent_path(@book, @chapter, @tableofcontent), class: 'btn btn-success' %>
          <% end %>
      <% @chapter.tableofcontents.each do |toc| %> 
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
              <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= toc.id %>" aria-expanded="false" aria-controls="<%= toc.id %>">
                <%= toc.title %>
              </a>
            </h4>
          </div>
          <div id="<%= toc.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
            <% if policy(@chapter).update? %>
            <%= link_to "Edit TOC", edit_book_chapter_tableofcontent_path(@book, @chapter, toc), class: 'btn btn-primary' %>
            <%= link_to "Delete TOC", [@book, @chapter, toc], method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this TOC?" } %>            
          <% end %>
          <h5><%= simple_format toc.body %></h5>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
