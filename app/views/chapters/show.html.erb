<%= display_meta_tags %>
<section class="container chapter-show">
  <div class="row">
    <div class="hidden-xs col-sm-3 col-md-3 col-lg-3">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- chapter-small -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:125px;height:125px"
           data-ad-client="ca-pub-2109246747658646"
           data-ad-slot="9242484410"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
      <br>
      <br>
      <% @book.chapters.each do |chapter| %>
        <p><%= link_to chapter.title, [@book, chapter] %></p>
      <% end %>
    </div>
    <section class="container">
      <div class="col-sm-9 col-md-9 col-lg-9 chapter-col">
        <div class="media">
          <div class="media-body"> 
            <div class="col-xs-12 hidden-sm hidden-md hidden-lg text-center">
              <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
              <!-- chapter-small -->
              <ins class="adsbygoogle"
                   style="display:inline-block;width:125px;height:125px"
                   data-ad-client="ca-pub-2109246747658646"
                   data-ad-slot="9242484410"></ins>
              <script>
              (adsbygoogle = window.adsbygoogle || []).push({});
              </script>
              <hr>
            </div>
            <br> 
            <h1><%= title @chapter.title %><br> <small>Authored by <%= link_to @book.author, @book.websiteurl %></h1>  
            <%= image_tag "wilson.png", {class: "wilson"} %>
            <% if policy(@chapter).update? %>
              <%= link_to "Edit Chapter", edit_book_chapter_path, class: 'btn btn-primary' %>
              <%= link_to "New TOC", new_book_chapter_tableofcontent_path(@book, @chapter, @tableofcontent), class: 'btn btn-success' %>
            <% end %>
            <hr>
            <% @chapter.tableofcontents.each do |toc| %> 
              <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                  <div class="panel-heading" role="tab" id="headingOne">
                    <h2 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= toc.id %>" aria-expanded="true" aria-controls="<%= toc.id %>">
                      <%= toc.title %>
                    </a>
                    </h2>
                  </div>
                  <div id="<%= toc.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">
                      <% if policy(@chapter).update? %>
                        <%= link_to "Edit TOC", edit_book_chapter_tableofcontent_path(@book, @chapter, toc), class: 'btn btn-primary' %>
                        <%= link_to "Delete TOC", [@book, @chapter, toc], method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this TOC?" } %>            
                      <% end %>
                      <p><%= description simple_format toc.body %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </section>
  </div>
</section>
