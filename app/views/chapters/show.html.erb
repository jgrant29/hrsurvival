
<div class="row">
  <div class="col-md-3 ">
    <% @book.chapters.each do |chapter| %>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
              <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= chapter.id %>" aria-expanded="false" aria-controls="<%= chapter.id %>">
                <%= chapter.title %>
              </a>
            </h4>
          </div>
          <div id="<%= chapter.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
              <% chapter.tableofcontents.each do |toc| %>
            <h5><%= link_to toc.title, [@book, chapter, toc] %></h5>
            <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  <div class="col-md-9">
    <div class="media">
      <div class="media-body">          
        <h1><%= @chapter.title %></h1>
          <% if policy(@chapter).update? %>
            <%= link_to "Edit Chapter", edit_book_chapter_path, class: 'btn btn-primary' %>
            <%= link_to "New TOC", new_book_chapter_tableofcontent_path(@book, @chapter, @tableofcontent), class: 'btn btn-success' %>
          <% end %>
          
          <p>Table of Contents</p>
          <div>
            <%= simple_format @chapter.body, id: "toc-container" %>
            <%= @chapter.body %>
            <% @chapter.tableofcontents.each do |toc| %>
              <h5><%= link_to toc.title, [@book, @chapter, toc] %></h5>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>