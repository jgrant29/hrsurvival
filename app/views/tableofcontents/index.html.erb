<p id="notice"><%= notice %></p>

<h1>Listing Tableofcontents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th>Public</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tableofcontents.each do |tableofcontent| %>
      <tr>
        <td><%= tableofcontent.title %></td>
        <td><%= tableofcontent.description %></td>
        <td><%= tableofcontent.body %></td>
        <td><%= tableofcontent.public %></td>
        <td><%= tableofcontent.author %></td>
        <td><%= link_to 'Show', tableofcontent %></td>
        <td><%= link_to 'Edit', edit_tableofcontent_path(tableofcontent) %></td>
        <td><%= link_to 'Destroy', tableofcontent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

