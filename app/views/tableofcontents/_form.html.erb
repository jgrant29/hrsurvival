  <%= form_for [@book, @chapter, @tableofcontent] do |f| %>
  <% if @tableofcontent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tableofcontent.errors.count, "error") %> prohibited this tableofcontent from being saved:</h2>

      <ul>
      <% @tableofcontent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter the title of this table of content" %>
  </div><br>
  <div class="field-group">
    <%= f.label :weight %><br>
    <%= f.text_field :weight, class: "form-control input-sm", placeholder: "Enter the weight of toc to sort e.g. 1" %>
  </div><br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control", placeholder: "Enter the description of this table of content" %>
  </div><br>
    <div class="field" data-no-turbolink>
      <%= f.label :body %>
      <%= f.cktext_area :body, :ckeditor => {:toolbar => 'Full' } %>
    </div><br>
  <div class="field">
    <%= f.label :public %><br>
    <%= f.check_box :public %>
  </div><br>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: "form-control", placeholder: "Enter the author of this table of content" %>
  </div><br>
  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div><br>
<% end %>
</div>
